<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CuiEmpleado" class="control-label"></label>
        <input type="number" min="0" asp-for="CuiEmpleado" class="form-control" />
        <span asp-validation-for="CuiEmpleado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellidos" class="control-label"></label>
        <input type="text" asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label"></label>
        <input type="number" asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="correo" class="control-label"></label>
        <input type="email" asp-for="correo" class="form-control" />
        <span asp-validation-for="correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="usuario" class="control-label"></label>
        <input type="text" asp-for="usuario" class="form-control" />
        <span asp-validation-for="usuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="contrasenya" class="control-label"></label>
        <input type="password" asp-for="contrasenya" class="form-control" />
        <span asp-validation-for="contrasenya" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Puesto" class="control-label"></label>
        <input type="number" min="0" asp-for="Puesto" class="form-control" />
        <span asp-validation-for="Puesto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salario" class="control-label"></label>
        <input type="number" step="0.01" asp-for="Salario" class="form-control" />
        <span asp-validation-for="Salario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaUltimoAumento" class="control-label"></label>
        <input type="date" asp-for="FechaUltimoAumento" class="form-control" />
        <span asp-validation-for="FechaUltimoAumento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaIngreso" class="control-label"></label>
        <input type="date" asp-for="FechaIngreso" class="form-control" />
        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaBaja" class="control-label"></label>
        <input type="date" asp-for="FechaBaja" class="form-control" />
        <span asp-validation-for="FechaBaja" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>